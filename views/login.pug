head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  title  Login Page 
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' type='text/css' media='screen' href='style.css')
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
body
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    a.navbar-brand(href='/') MovieBuddies
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
        form.form-inline.my-2.my-lg-0(action="/search")
            input.form-control.mr-sm-2(placeholder='Search', class="form-control" aria-label='Search', name="searchTerm")
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
  .container
    .row
      .col-sm-9.col-md-7.col-lg-5.mx-auto
        .card.card-signin.my-5
          .card-body
            h5.card-title.text-center Sign In
            form.form-signin
              .form-label-group
                input#inputEmail.form-control(type='email' placeholder='Email address' required='' autofocus='')
                label(for='inputEmail') Email address
              .form-label-group
                input#inputPassword.form-control(type='password' placeholder='Password' required='')
                label(for='inputPassword') Password
              .custom-control.custom-checkbox.mb-3
                input#customCheck1.custom-control-input(type='checkbox')
                label.custom-control-label(for='customCheck1') Remember password
              button.btn.btn-lg.btn-block.text-uppercase(type='submit', style="background-color: #A71D31; color: white") Sign in
      .col-sm-9.col-md-7.col-lg-5.mx-auto
        .card.card-signin.my-5
          .card-body
            h5.card-title.text-center Register
            form.form-signin
              .form-label-group
                input#inputEmail.form-control(type='email' placeholder='First Name' required='' autofocus='')
                label(for='inputEmail') First Name
              .form-label-group
                input#inputEmail.form-control(type='email' placeholder='Last Name' required='' autofocus='')
                label(for='inputEmail') Last Name
              .form-label-group
                input#inputEmail.form-control(type='email' placeholder='Email address' required='' autofocus='')
                label(for='inputEmail') Email address
              .form-label-group
                input#inputPassword.form-control(type='password' placeholder='Password' required='')
                label(for='inputPassword') Password
              button.btn.btn-lg.btn-block.text-uppercase(type='submit', style="background-color: #A71D31; color: white") Register
              hr.my-0
